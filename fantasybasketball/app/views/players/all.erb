<h1>List of all Players</h1>
<% @players.each do | player | %>
    <h4>
        <a href= '/players/<%= player.slug %>'>
            <%= player.name %>
        </a>
        <% if player.user == nil && Helpers.is_logged_in?(@session) %>
            <form method= "post" action= "/players/draft/<%= player.slug %>"> <input type= "submit" value= "Draft" name= "Draft"> 
            </form>
        <% else %>
            <p>-- plays for <%= player.user.name %></p>
        <% end %>
    </h4>
<% end %>
<h3>
    Click <a href= "/users/login">here</a> to veiw your profile
</h3>